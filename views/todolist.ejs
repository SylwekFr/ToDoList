            <div class="container">
                <h1 class="display-4 text-center font-weight-bold">My ToDoList</h1>
            </div>
        </header>
        <ul>
        <% todolist.forEach(function(todo, index) { %>
            <li><a href="/private/delete/<%= index %>">âœ˜</a> <%= todo %></li>
        <% }); %>
        </ul>

